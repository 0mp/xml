.PHONY: testlib clean

open ../../../config

TESTS[] =
   test1
   test2
   test3
   light_test

OCAMLINCLUDES += .. $(LIBDIR)

OCAMLFLAGS += -rectypes

foreach(name, $(TESTS))
   OCAML_OTHER_LIBS = fstream ini_config conversion xml
   OCamlProgram($(name), $(name))
   $(name): $(addsuffix .ml, $(name))

testlib: $(TESTS)

clean:
   $(CLEAN) $(TESTS)
